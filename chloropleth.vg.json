{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "background": "lightblue",
  "params": [
    {
      "name": "zoom_level",
      "value": 150,
      "bind": {
        "input": "range",
        "min": 150,
        "max": 1000,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [20, 10],
          [100, 35],
          [15, 50],
          [-100, 40],
          [135, -25],
          [-60, -15]
        ],
        "labels": [
          "Whole Map",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "graticule": true
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightblue"
      }
    },
    {
      "data": {
        "url": "ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_boundary_lines_land"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "gray",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "Dataset/merged_medals_population.csv"
      },
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {
              "url": "ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "countries"
              }
            },
            "key": "id"
          },
          "as": "geo"
        },
        {
          "calculate": "(datum.Total / datum.total_population) * 1000000",
          "as": "medals_per_capita"
        }
      ],
      "mark": "geoshape",
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "condition": {
            "test": "datum.medals_per_capita > 0",
            "field": "medals_per_capita",
            "type": "quantitative",
            "scale": {
              "scheme": "yelloworangebrown",
              "domain": [0, 4]
            },
            "legend": {
              "title": "Medals Per Capita",
              "titleFontSize": 12,
              "labelFontSize": 12,
              "direction": "vertical",
              "offset": 5
            }
          },
          "value": "lightgray"
        },
        "tooltip": [
          {"field": "country_long", "type": "nominal", "title": "Country"},
          {"field": "Gold Medal", "type": "quantitative", "title": "Gold Medals"},
          {"field": "Silver Medal", "type": "quantitative", "title": "Silver Medals"},
          {"field": "Bronze Medal", "type": "quantitative", "title": "Bronze Medals"},
          {"field": "Total", "type": "quantitative", "title": "Total Medals"},
          {
            "field": "total_population",
            "type": "quantitative",
            "title": "Population",
            "format": ","
          },
          {
            "field": "medals_per_capita",
            "type": "quantitative",
            "title": "Medals per Million People",
            "format": ".2f"
          }
        ],
        "stroke": {
          "condition": {
            "selection": "hover",
            "value": "black"
          },
          "value": null
        },
        "strokeWidth": {
          "condition": {
            "selection": "hover",
            "value": 2
          },
          "value": 0.5
        }
      },
      "selection": {
        "hover": {
          "type": "single",
          "on": "mouseover",
          "empty": "none"
        }
      }
    },
    {
      "data": {
        "values": [
          {
            "Longitude": 165,
            "Latitude": -50,
            "text": "New Zealand has\\ the  second highest\\medals per capita."
          },
          {
            "Longitude": 113,
            "Latitude": 2,
            "text": "Brunei Darussalam \\has the highest\\medals per capita."
          }
        ]
      },
      "encoding": {
        "longitude": { "field": "Longitude", "type": "quantitative" },
        "latitude": { "field": "Latitude", "type": "quantitative" }
      },
      "layer": [
        {
          "mark": {
            "type": "point",
            "size": 600,
            "shape": "arrow",
            "color": "red",
            "fill": "pink",
            "strokeWidth": 2,
            "angle": 45
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "fontWeight": "bold",
            "fontSize": 12,
            "color": "blueviolet",
            "dy": 30,
            "dx": -80,
            "lineBreak": "\\",
            "lineHeight": 10
          },
          "encoding": { "text": { "field": "text" } }
        }
      ]
    }
  ]
}