{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 10 Countries in Athletics",
    "anchor": "start",
    "fontSize": 18,
    "fontWeight": "bold"
  },
  "data": {
    "url": "Dataset/chord_athletics.csv"
  },
  "transform": [
    {
      "window": [{"op": "sum", "field": "athletes", "as": "total_athletes"}],
      "groupby": ["country_long"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "total_athletes", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= 10"
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {"field": "athletes", "type": "quantitative"},
    "color": {
      "field": "country_long",
      "type": "nominal",
      "title": "Country",
      "legend": {
        "titleFontSize": 14,
        "labelFontSize": 12,
        "orient": "right"
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 50
      },
      "encoding": {
        "theta": {"field": "athletes", "type": "quantitative"},
        "color": {"field": "country_long", "type": "nominal"},
        "tooltip": [
          {"field": "country_long", "type": "nominal", "title": "Country"},
          {"field": "disciplines", "type": "nominal", "title": "Sport"},
          {"field": "athletes", "type": "quantitative", "title": "Athletes"}
        ]
      }
    }
  ]
}
