{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://vega.github.io/vega-datasets/data/world-110m.json", 
    "format": {
      "type": "topojson",
      "feature": "countries"
    }
  },
  "transform": [
    {
      "lookup": "id", 
      "from": {
        "data": {
          "url": "Dataset/chloropleth_data.csv"
        },
        "key": "id", 
        "fields": ["Total", "country_long"]
      }
    }
  ],
  "projection": {
    "type": "mercator" 
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Total",
      "type": "quantitative",
      "scale": {
        "scheme": "blues"
      }
    },
    "tooltip": [
      {"field": "country_long", "type": "nominal", "title": "Country"},
      {"field": "Total", "type": "quantitative", "title": "Total Medals"}
    ]
  }
}
