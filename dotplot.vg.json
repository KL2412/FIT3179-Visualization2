{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "Dataset/summer_sport_over_year.csv"
  },
  "width": 800,
  "height": 500,
  "mark": {
    "type": "circle",
    "size": 100,
    "opacity": 0.7
  },
  "params": [
    {
      "name": "startYear",
      "value": 1996,
      "bind": {
        "input": "range",
        "min": 1964,
        "max": 2024,
        "step": 4,
        "name": "Select Start Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year >= startYear"
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {
        "labelAngle": 0,
        "labelFontSize": 16,
        "titleFontSize": 20
      }
    },
    "y": {
      "field": "Sport",
      "type": "nominal",
      "sort": "alphabetical",
      "axis": {
        "labelFontSize": 16,
        "titleFontSize": 20
      }
    },
    "color": {
      "field": "Sport",
      "type": "nominal",
      "legend": null
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal"},
      {"field": "Sport", "type": "nominal"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "axis": {
      "grid": false,
      "tickBand": "extent"
    }
  }
}
